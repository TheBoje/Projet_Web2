{% extends("commons/_layout.html.twig") %}
{% block stylesheet_page %}
    <link href="{{ asset('css/admin/list-users.css') }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block vue %}
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Identifiant</th>
            <th>Mot de passe (crypté)</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Date de naissance</th>
            <th>Est admin</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.login }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.birthdate|date('d/m/Y') }}</td>
                <td>{{ (user.isAdmin == true) ? 'oui' : 'non' }}</td>
                <td><a href="{{ path('admin_deleteUser', {'id' : user.id}) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}